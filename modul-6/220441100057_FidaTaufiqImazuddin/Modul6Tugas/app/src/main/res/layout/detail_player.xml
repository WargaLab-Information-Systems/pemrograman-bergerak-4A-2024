<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Primary_bg"
    tools:context=".DetailPlayerActivity">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/shapeableImageView2"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/bg_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.BottomRounded" />

    <ImageButton
        android:id="@+id/btn_back_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:contentDescription="@string/back_button_description"
        android:src="@drawable/ic_btn_back_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@+id/btn_back_white"
        app:layout_constraintTop_toBottomOf="@+id/btn_back_white">

        <TextView
            android:id="@+id/detail_player_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/play_bold"
            android:text="Bruno \nFernandes"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/detail_player_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/play_bold"
            android:text="#8"
            android:textColor="@color/yellow"
            android:textSize="28sp" />

        <ImageView
            android:id="@+id/detail_club_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:adjustViewBounds="true"
            android:src="@drawable/manchesterunitedlogo" />

    </LinearLayout>

    <ImageView
        android:id="@+id/detail_player_image"
        android:layout_width="193dp"
        android:layout_height="229dp"
        android:adjustViewBounds="true"
        android:src="@drawable/brunofernandes"
        app:layout_constraintBottom_toBottomOf="@+id/shapeableImageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_back_white" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/plusjakartasans_bold"
        android:text="Player Details"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/shapeableImageView2" />


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="18dp"

        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"

                android:background="@color/Gray"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingStart="11.5dp"
                android:paddingTop="14.5dp"
                android:paddingEnd="11.5dp"
                android:paddingBottom="14.5dp">

                <TextView
                    android:id="@+id/detail_player_goals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/play_bold"
                    android:text="900"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/garis" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/plusjakartasans_semibold"
                    android:text="Goals"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"

                android:background="@color/Gray"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingStart="11.5dp"
                android:paddingTop="14.5dp"
                android:paddingEnd="11.5dp"
                android:paddingBottom="14.5dp">

                <TextView
                    android:id="@+id/detail_player_assist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/play_bold"
                    android:text="400"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/player_assists"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/garis" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/plusjakartasans_semibold"
                    android:text="Assists"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"

                android:background="@color/Gray"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingStart="11.5dp"
                android:paddingTop="14.5dp"
                android:paddingEnd="11.5dp"
                android:paddingBottom="14.5dp">

                <TextView
                    android:id="@+id/detail_player_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/play_bold"
                    android:text="5.0"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/garis" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/plusjakartasans_semibold"
                    android:text="Ratings"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"

                android:background="@color/Gray"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingStart="11.5dp"
                android:paddingTop="14.5dp"
                android:paddingEnd="11.5dp"
                android:paddingBottom="14.5dp">

                <TextView
                    android:id="@+id/detail_player_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/play_bold"
                    android:text="AMF"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/garis" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/plusjakartasans_semibold"
                    android:text="Position"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/plusjakartasans_bold"
        android:text="Player Description"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <TextView
        android:id="@+id/detail_player_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/plusjakartasans_regular"
        android:textSize="12sp"
        android:text="Bruno Fernandes is a professional footballer from Portugal, renowned for his abilities as an attacking midfielder. Born on September 8, 1994, in Maia, Portugal, Fernandes displayed exceptional talent in football from a young age. His professional career began in Italy with Novara, before moving to Udinese and Sampdoria, and then returning to Portugal to play for Sporting CP. At Sporting CP, Fernandes truly shone. He became the team captain and helped the club secure various domestic titles, including the Taça de Portugal and Taça da Liga. His consistent performances, goal-scoring ability, and knack for providing assists made him one of the standout players in the Portuguese league. In January 2020, Fernandes transferred to Manchester United, one of the biggest clubs in England, for a significant fee. Since joining Manchester United, he has become a key player and has received widespread acclaim for his contributions on the field."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

</androidx.constraintlayout.widget.ConstraintLayout>