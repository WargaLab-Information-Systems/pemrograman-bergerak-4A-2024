<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCFCFC"
    tools:context=".Author">

    <TextView
        android:id="@+id/titleAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="66dp"
        android:fontFamily="@font/plus_jakarta_sans_extra_bold"
        android:text="About Creator"
        android:textColor="#434343"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/backFromCreator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:src="@drawable/icon_back_2"
        app:layout_constraintBottom_toBottomOf="@+id/titleAbout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/titleAbout" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/shapeableImageView"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="24dp"
        android:padding="2dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:src="@drawable/ali"
        app:layout_constraintEnd_toEndOf="@+id/titleAbout"
        app:layout_constraintStart_toStartOf="@+id/titleAbout"
        app:layout_constraintTop_toBottomOf="@+id/titleAbout"
        app:shapeAppearanceOverlay="@style/CircularImageViewStyle"
        app:strokeColor="#2E53E7"
        app:strokeWidth="2dp" />

    <TextView
        android:id="@+id/NameAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/urbanist_bold"
        android:text="Muhammmad Daffa Nur Maulidan"
        android:textColor="#434343"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/shapeableImageView"
        app:layout_constraintStart_toStartOf="@+id/shapeableImageView"
        app:layout_constraintTop_toBottomOf="@+id/shapeableImageView" />

    <TextView
        android:id="@+id/nametitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/plus_jakarta_sans_semi_bold"
        android:text="Name"
        android:textColor="#434343"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NameAuthor" />

    <TextView
        android:id="@+id/nameValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/plus_jakarta_sans_regular"
        android:text="Muhammmad Daffa Nur Maulidan"
        android:textColor="#434343"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/nametitle"
        app:layout_constraintTop_toBottomOf="@+id/nametitle" />

    <TextView
        android:id="@+id/ageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/plus_jakarta_sans_semi_bold"
        android:text="Age"
        android:textColor="#434343"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/nameValue"
        app:layout_constraintTop_toBottomOf="@+id/nameValue" />

    <TextView
        android:id="@+id/ageValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/plus_jakarta_sans_regular"
        android:text="21"
        android:textColor="#434343"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/ageTitle"
        app:layout_constraintTop_toBottomOf="@+id/ageTitle" />

    <TextView
        android:id="@+id/statusTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/plus_jakarta_sans_semi_bold"
        android:text="Status"
        android:textColor="#434343"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/ageValue"
        app:layout_constraintTop_toBottomOf="@+id/ageValue" />

    <TextView
        android:id="@+id/statusvalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/plus_jakarta_sans_regular"
        android:text="College Student"
        android:textColor="#434343"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/statusTitle"
        app:layout_constraintTop_toBottomOf="@+id/statusTitle" />

    <TextView
        android:id="@+id/aboutTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/plus_jakarta_sans_semi_bold"
        android:text="About"
        android:textColor="#434343"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/statusvalue"
        app:layout_constraintTop_toBottomOf="@+id/statusvalue" />

    <TextView
        android:id="@+id/aboutValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginHorizontal="20dp"
        android:fontFamily="@font/plus_jakarta_sans_regular"
        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages"
        android:textColor="#434343"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@+id/aboutTitle" />

    <TextView
        android:id="@+id/faceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/plus_jakarta_sans_semi_bold"
        android:text="Face"
        android:textColor="#434343"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/aboutValue"
        app:layout_constraintTop_toBottomOf="@+id/aboutValue" />

    <TextView
        android:id="@+id/faceValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/plus_jakarta_sans_regular"
        android:text="Look at profile"
        android:textColor="#434343"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/faceTitle"
        app:layout_constraintTop_toBottomOf="@+id/faceTitle" />

    <TextView
        android:id="@+id/ipkTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/plus_jakarta_sans_semi_bold"
        android:text="IPK"
        android:textColor="#434343"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/faceValue"
        app:layout_constraintTop_toBottomOf="@+id/faceValue" />

    <TextView
        android:id="@+id/ipkValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/plus_jakarta_sans_regular"
        android:text="3.33"
        android:textColor="#434343"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/ipkTitle"
        app:layout_constraintTop_toBottomOf="@+id/ipkTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>