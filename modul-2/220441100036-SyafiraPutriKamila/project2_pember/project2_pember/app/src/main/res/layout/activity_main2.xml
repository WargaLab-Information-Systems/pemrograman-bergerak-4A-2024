<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Universitas Trunojoyo"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.115"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.022" />

        <TextView
            android:id="@+id/textview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beranda"
            app:layout_constraintStart_toStartOf="@+id/textview1"
            app:layout_constraintTop_toBottomOf="@+id/textview1" />

        <TextView
            android:id="@+id/textview3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="Aktivitas Kegiatan"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textview2"
            app:layout_constraintTop_toBottomOf="@+id/textview2" />

        <ImageView
            android:id="@+id/logoBeranda"
            android:layout_width="37dp"
            android:layout_height="42dp"
            android:layout_marginEnd="22dp"
            android:src="@drawable/logoutm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textview1" />

        <ImageView
            android:id="@+id/gambarKiri1"
            android:layout_width="168dp"
            android:layout_height="168dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/gambar2"
            app:layout_constraintStart_toStartOf="@+id/textview3"
            app:layout_constraintTop_toBottomOf="@+id/textview3" />

        <ImageView
            android:id="@+id/gamabarKanan1"
            android:layout_width="175dp"
            android:layout_height="168dp"
            android:src="@drawable/gambar3"
            app:layout_constraintEnd_toEndOf="@+id/logoBeranda"
            app:layout_constraintTop_toTopOf="@+id/gambarKiri1" />

        <ImageView
            android:id="@+id/gambarKiri2"
            android:layout_width="168dp"
            android:layout_height="168dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/gambar2"
            app:layout_constraintStart_toStartOf="@+id/gambarKiri1"
            app:layout_constraintTop_toBottomOf="@+id/gambarKiri1" />

        <ImageView
            android:id="@+id/gamabarKanan2"
            android:layout_width="175dp"
            android:layout_height="168dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/gambar3"
            app:layout_constraintStart_toStartOf="@+id/gamabarKanan1"
            app:layout_constraintTop_toBottomOf="@+id/gamabarKanan1" />

        <TextView
            android:id="@+id/textview4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="36dp"
            android:text="Aktivitas Kegiatan"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/gambarKiri2"
            app:layout_constraintTop_toBottomOf="@+id/gambarKiri2" />

        <ImageView
            android:id="@+id/gambarBaris1"
            android:layout_width="116dp"
            android:layout_height="116dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/gambar2"
            app:layout_constraintStart_toStartOf="@+id/gambarKiri2"
            app:layout_constraintTop_toBottomOf="@+id/textview4" />

        <TextView
            android:id="@+id/textbaris1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Terlalu Jago, Trunojoyo juara lagi"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/gamabarKanan2"
            app:layout_constraintStart_toEndOf="@+id/gambarBaris1"
            app:layout_constraintTop_toTopOf="@+id/gambarBaris1" />

        <TextView
            android:id="@+id/textbaris1pg1"
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:layout_marginTop="16dp"
            android:text="Universitas Trunojoyo berhasil meraih juara 1 dalam ajang perlombaan debat nasional yang diselenggarakan oleh..."
            app:layout_constraintEnd_toEndOf="@+id/textbaris1"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/textbaris1"
            app:layout_constraintTop_toBottomOf="@+id/textbaris1" />

        <ImageView
            android:id="@+id/gambarBaris2"
            android:layout_width="116dp"
            android:layout_height="116dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/gambar2"
            app:layout_constraintStart_toStartOf="@+id/gambarBaris1"
            app:layout_constraintTop_toBottomOf="@+id/gambarBaris1" />

        <TextView
            android:id="@+id/textbaris2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Terlalu Jago, Trunojoyo juara lagi"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/gamabarKanan2"
            app:layout_constraintStart_toEndOf="@+id/gambarBaris3"
            app:layout_constraintTop_toTopOf="@+id/gambarBaris3" />

        <TextView
            android:id="@+id/textbariske2"
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:layout_marginTop="12dp"
            android:text="Universitas Trunojoyo berhasil meraih juara 1 dalam ajang perlombaan debat nasional yang diselenggarakan oleh..."
            app:layout_constraintEnd_toEndOf="@+id/textbaris3"
            app:layout_constraintStart_toStartOf="@+id/textbaris3"
            app:layout_constraintTop_toBottomOf="@+id/textbaris3" />

        <ImageView
            android:id="@+id/gambarBaris3"
            android:layout_width="116dp"
            android:layout_height="116dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/gambar2"
            app:layout_constraintStart_toStartOf="@+id/gambarBaris2"
            app:layout_constraintTop_toBottomOf="@+id/gambarBaris2" />

        <TextView
            android:id="@+id/textbaris3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Terlalu Jago, Trunojoyo juara lagi"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/gamabarKanan2"
            app:layout_constraintStart_toEndOf="@+id/gambarBaris2"
            app:layout_constraintTop_toTopOf="@+id/gambarBaris2" />

        <TextView
            android:id="@+id/textbaris1pg2"
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:layout_marginTop="12dp"
            android:text="Universitas Trunojoyo berhasil meraih juara 1 dalam ajang perlombaan debat nasional yang diselenggarakan oleh..."
            app:layout_constraintEnd_toEndOf="@+id/textbaris2"
            app:layout_constraintStart_toStartOf="@+id/textbaris2"
            app:layout_constraintTop_toBottomOf="@+id/textbaris2" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>