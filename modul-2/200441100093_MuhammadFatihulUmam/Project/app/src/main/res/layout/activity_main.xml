<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/gambar1"
        android:layout_width="426dp"
        android:layout_height="374dp"
        android:src="@drawable/gambar1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/texTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="Universitas Trunojoyo"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gambar1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="236dp"
        android:layout_height="48dp"
        android:fontFamily="@font/poppins"
        android:text="selamat datang di Aplikasi milik Unniversitas Trunojoyo"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/texTop"
        app:layout_constraintTop_toBottomOf="@+id/texTop" />

    <EditText
        android:id="@+id/inputLogin"
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins_light"
        android:hint="Masukkan nama kamu"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/page_beranda"
        android:layout_width="283dp"
        android:layout_height="56dp"
        android:layout_marginTop="42dp"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/bg_btn_black"
        android:fontFamily="@font/poppins_bold"
        android:text="Lanjut"
        android:textSize="20sp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputLogin" />
    

</androidx.constraintlayout.widget.ConstraintLayout>