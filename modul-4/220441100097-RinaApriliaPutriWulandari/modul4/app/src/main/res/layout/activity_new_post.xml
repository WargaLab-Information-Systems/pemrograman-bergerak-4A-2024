<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".New_Post"
    android:layout_marginTop="30dp"
    >

    <TextView
        android:id="@+id/Newpost"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="New Post"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:id="@+id/back"
        android:onClick="balik"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="22dp"
        android:src="@drawable/ic_back"
        android:layout_alignParentStart="true"
        />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/newimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="27dp"
        android:layout_below="@id/Newpost"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/posting"
            android:layout_width="124dp"
            android:layout_height="124dp"
            android:src="@drawable/ic_launcher_background"
            />

        <Button
            android:id="@+id/buttonChange"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Change"
            android:textSize="9sp"
            android:fontFamily="@font/poppins"
            android:background="#80000000"
            android:textColor="@color/white"
            android:layout_gravity="bottom"/>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/judul"
        android:layout_marginTop="37dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="16dp"
        android:textColor="#434343"
        android:layout_below="@id/newimage"
        android:layout_alignStart="@id/back"
        />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/postjudul"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:textColor="#9D9C9C"
        android:hint="Write a title of your item"
        android:textSize="10dp"
        android:inputType="textMultiLine"
        android:fontFamily="@font/poppins"
        android:layout_below="@id/judul"
        android:layout_alignStart="@id/descripti"
        />

    <TextView
        android:id="@+id/descripti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:text="Description"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="16dp"
        android:textColor="#434343"
        android:layout_below="@id/postjudul"
        android:layout_alignStart="@id/back"
        />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/postdesc"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:textColor="#9D9C9C"
        android:hint="Write a description of your item (maximum 5000 characters)"
        android:textSize="10dp"
        android:inputType="textMultiLine"
        android:fontFamily="@font/poppins"
        android:layout_below="@id/descripti"
        android:layout_alignStart="@id/descripti"
        />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="30dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="#27B404">

        <Button
            android:id="@+id/up_post"
            android:layout_width="347dp"
            android:layout_height="47dp"
            android:text="Posting"
            android:textAlignment="center"
            android:textColor="#FFF6F6"
            android:fontFamily="@font/poppins_semibold"
            android:backgroundTint="#27B404"/>
    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>
