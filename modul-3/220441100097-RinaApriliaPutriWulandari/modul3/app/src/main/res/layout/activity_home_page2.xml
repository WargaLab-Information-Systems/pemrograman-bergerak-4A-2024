<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage2">

    <TextView
        android:id="@+id/nama"
        android:layout_marginTop="72dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ubudâ€™s Hotel"
        android:layout_marginStart="120dp"
        android:textSize="20dp"
        android:fontFamily="@font/quicksand_bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        app:cardBackgroundColor="#B3B3B3"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toTopOf="@id/nama"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/share"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="8dp"
            app:shapeAppearanceOverlay="@style/circular"
            android:src="@drawable/ic_share" />

    </androidx.cardview.widget.CardView>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img"
        android:layout_width="314dp"
        android:layout_height="202dp"
        android:layout_marginTop="27dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nama"
        app:shapeAppearanceOverlay="@style/circular"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/dekripsi"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:lineHeight="18dp"
        android:textSize="12dp"
        android:fontFamily="@font/poppins"
        android:justificationMode="inter_word"
        android:text="The Seraya Resort adalah sebuah resor mewah yang terletak di Pulau Seraya, Labuan Bajo, Flores, Nusa Tenggara Timur, Indonesia. Terletak di tepi pantai dengan pemandangan yang memukau ke Teluk Labuan Bajo dan lautan Hindia, resor ini menawarkan pengalaman menginap yang eksklusif di salah satu lokasi terpencil dan indah di Indonesia."
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img" />

</androidx.constraintlayout.widget.ConstraintLayout>