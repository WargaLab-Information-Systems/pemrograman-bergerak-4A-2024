<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Login">

    <EditText
        android:id="@+id/iusername"
        android:layout_width="350dp"
        android:layout_height="39dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounder_corner"
        android:drawableLeft="@drawable/user"
        android:drawablePadding="10dp"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:hint="Masukkan Username Anda"
        android:inputType="text"
        android:lineHeight="18dp"
        android:padding="10dp"
        android:textSize="12sp"
        app:circularflow_radiusInDP="12dp"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="174dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="Login"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="41dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Username"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:drawableRight="@drawable/eye"
        android:drawableLeft="@drawable/lock"
        android:drawablePadding="10dp"
        android:id="@+id/ipass"
        android:layout_width="350dp"
        android:layout_height="38dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPassword"
        android:padding="10dp"
        android:background="@drawable/rounder_corner"
        android:textSize="12sp"
        android:hint="Masukkan Kata Sandi Anda"
        android:fontFamily="@font/poppins"
        android:lineHeight="18dp"
        app:circularflow_defaultRadius="4dp"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/black"
        android:text="Kata Sandi"
        android:layout_marginTop="24dp"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/iusername"
        app:layout_constraintTop_toBottomOf="@+id/iusername" />

    <Button
        android:id="@+id/blogin"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:backgroundTint="#2E53E7"
        android:fontFamily="@font/quicksand_semibold"
        android:lineHeight="24dp"
        android:text="Masuk"
        android:layout_marginTop="40dp"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ipass" />
</androidx.constraintlayout.widget.ConstraintLayout>